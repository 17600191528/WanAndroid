.haibao {
  width: 100%;
  height: 35%;

}

.swiper {
  width: 100%;
  height: 360rpx;
}

.imageBener {
  width: 100%;
  height: 100%;
}

.liststyle {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  font-size: 16px;
  margin: 10rpx;
  border: 3px solid #f5f5f5;
  border-radius: 22rpx;
}

.listtop {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.listtopimage {
  width: 22px;
  height: 22px;
  margin-top: 6px;
  border-radius: 50%;
  margin-right: 5px;
}

.listtoptime {
  position: absolute;
  right: 20px;
  text-align: right;
  color: #9f9f9f;
  font-size: 13px;
}

.title {
  font-size: 14px;
  margin-top: 5px;
  margin-bottom: 5px;
  font-weight: bold;
}

.chapterName {
  font-size: 13px;
  color: #1b82d1;
  margin-top: 5px;
}

.collect {
  width: 20px;
  height: 20px;
  padding: 10px;
  position: absolute;
  right: 0px;
}
