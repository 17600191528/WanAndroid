/* pages/systemlist/systemlist.wxss */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.toptyperow {
  width: auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 50px;
  background-color: #f5f5f5;
  padding-bottom: 2px;

}

/**
*类型选中的样式
*/

.typetitlese {
  width: auto;
  font-size: 16px;
  height: 23px;
  line-height: 23px;
  text-align: center;
  color: #2996CD;
  flex-grow: 1;
  background-color: #fff;
  padding: 10px;
  white-space: nowrap;
  border-bottom: 2px solid #2996CD;
}

/**
*类型未选中的样式
*/

.typetitleno {
  width: auto;
  font-size: 16px;
  height: 25px;
  line-height: 25px;
  text-align: center;
  color: #000;
  flex-grow: 1;
  background-color: #fff;
  padding: 10px;
  white-space: nowrap;
}

.liststyle {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border: 3px solid #f5f5f5;
  font-size: 16px;
  margin-left: 7px;
  margin-right: 7px;
  margin-top: 5px;
  border-radius: 22rpx;
}

.listtop {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.listtopimage {
  width: 22px;
  height: 22px;
  margin-top: 5px;
  border-radius: 50%;
  margin-right: 5px;
}

.listtoptime {
  position: absolute;
  right: 20px;
  text-align: right;
  color: #9f9f9f;
  font-size: 14px;
}

.title {
  font-size: 14px;
  margin-top: 5px;
  margin-bottom: 5px;
  font-weight: bold;
}

.chapterName {
  font-size: 12px;
  color: #1b82d1;
  margin-top: 5px;
}
